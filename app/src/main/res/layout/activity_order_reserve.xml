<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.smartfit.activities.OrderReserveActivity">

    <include layout="@layout/common_header_view"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#dddddd"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始时间:"
            android:textSize="@dimen/text_normal_down"
            android:textColor="@color/black"
            android:layout_margin="@dimen/activity_horizontal_margin"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal">

                <com.smartfit.views.WheelView
                    android:id="@+id/wv_hour"
                    android:layout_width="150dp"
                    android:layout_height="match_parent" />

                <com.smartfit.views.WheelView
                    android:id="@+id/wv_min"
                    android:layout_width="150dp"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/header_bar_height"
                    android:paddingLeft="@dimen/header_bar_height"
                    android:layout_marginTop="@dimen/image_padding"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="时"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_normal_down" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/header_bar_height"
                    android:layout_marginTop="@dimen/image_padding"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="分"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_normal_down" />

            </LinearLayout>
        </FrameLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="锻炼时长:"
            android:textSize="@dimen/text_normal_down"
            android:textColor="@color/black"
            android:layout_margin="@dimen/activity_horizontal_margin"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_add_thirt_min"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="60分钟"
                android:background="@drawable/bg_dialog_selector_gray"
                android:gravity="center"
                android:padding="@dimen/image_padding"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tv_add_sixty_min"
                android:layout_width="0dp"
                android:layout_marginLeft="@dimen/header_bar_height"
                android:layout_height="wrap_content"
                android:text="90分钟"
                android:background="@drawable/bg_dialog_selector_white"
                android:gravity="center"
                android:padding="@dimen/image_padding"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_one_ninty_min"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="120分钟"
                android:background="@drawable/bg_dialog_selector_white"
                android:gravity="center"
                android:padding="@dimen/image_padding"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tv_add_three_hour"
                android:layout_width="0dp"
                android:layout_marginLeft="@dimen/header_bar_height"
                android:layout_height="wrap_content"
                android:text="180分钟"
                android:background="@drawable/bg_dialog_selector_white"
                android:gravity="center"
                android:padding="@dimen/image_padding"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
