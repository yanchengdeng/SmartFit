<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.smartfit.activities.AerobicAppratusDetailActivity">

    <include layout="@layout/common_header_view"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:background="@color/gray_light">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_img"
                android:scaleType="centerCrop"
                android:src="@mipmap/bg_pic"
                android:layout_marginTop="@dimen/image_padding"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ad_height" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/header_bar_height"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_normal"
                        android:textColor="@color/text_color_black"
                        android:text="六一北路浩沙健身馆"
                        />

                    <TextView
                        android:id="@+id/tv_room"
                        android:layout_marginTop="@dimen/image_padding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_normal"
                        android:textColor="@color/text_color_black"
                        android:text="有氧器械训练室"
                        />

                    <TextView
                        android:id="@+id/tv_distance"
                        android:layout_marginTop="@dimen/image_padding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_normal"
                        android:textColor="@color/text_color_gray"
                        android:text="距离0.6km"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/image_padding_big"
                        android:textSize="@dimen/text_normal"
                        android:textColor="@color/text_color_gray"
                        android:text="预约时间"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_normal"
                        android:textColor="@color/text_color_gray"
                        android:layout_marginTop="@dimen/image_padding"
                        android:text="2016/1/2 17:00pm~21:30pm"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_larger"
                        android:text="20"
                        android:textStyle="bold"
                        android:textColor="@color/text_color_blue"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_normal"
                        android:textColor="@color/text_color_black"
                        android:text="元"
                        />
                </LinearLayout>
            </RelativeLayout>

            <Button
                android:id="@+id/btn_order"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="立刻预约"
                android:textSize="@dimen/text_normal"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/bg_dialog_selector_red"
                android:layout_margin="@dimen/header_bar_height"/>


        </LinearLayout>

    </ScrollView>



</LinearLayout>
