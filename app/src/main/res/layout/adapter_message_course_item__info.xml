<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/activity_horizontal_margin">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="2dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/bg_pic"
        app:riv_corner_radius="4dip"
        app:riv_oval="false"
       />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:text="11-4 8:00"
        android:textColor="@color/text_color_gray"
        android:textSize="@dimen/text_normal" />


    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/image_padding"
        android:layout_toRightOf="@+id/iv_icon"
        android:text="姓名"
        android:textColor="@color/text_color_black"
        android:textSize="@dimen/text_normal" />


    <TextView
        android:id="@+id/tv_tittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/image_padding"
        android:layout_toRightOf="@+id/iv_icon"
        android:lineSpacingExtra="3dp"
        android:text="@string/course_aggree_info"
        android:textColor="@color/text_color_black"
        android:textSize="@dimen/text_normal" />


    <TextView
        android:id="@+id/tv_class_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_tittle"
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:text="查看课程详情"
        android:textColor="@color/blue_light"
        android:textSize="@dimen/text_normal" />


</RelativeLayout>
