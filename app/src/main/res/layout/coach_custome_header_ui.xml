<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="30dp"
        android:src="@mipmap/icon_setting" />


    <ImageView
        android:id="@+id/iv_gift"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="30dp"
        android:visibility="gone"
        android:src="@mipmap/icon_gift" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_header"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="60dp"
        android:layout_toRightOf="@+id/iv_setting"
        android:scaleType="centerCrop"
        android:src="@mipmap/icon_pay_mr" />

    <TextView
        android:id="@+id/tv_vip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-20dp"
        android:layout_marginTop="60dp"
        android:layout_toRightOf="@+id/iv_header"
        android:background="@mipmap/bg_vip"
        android:gravity="center"
        android:text="会员"
        android:textColor="@color/white"
        android:textSize="@dimen/text_small"
        android:visibility="invisible" />


    <LinearLayout
        android:id="@+id/rl_custome_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/image_padding_big">

        <LinearLayout
            android:id="@+id/ll_custome_ui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/common_header_bg"
                android:textSize="@dimen/text_larger" />


            <TextView
                android:id="@+id/tv_mouth_server"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_name"
                android:background="@drawable/icon_wo_nobaoyue"
                android:gravity="center_vertical|right"
                android:text="@string/open_mouth_server"
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/text_normal_down" />


            <TextView
                android:id="@+id/tv_motto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_mouth_server"
                android:layout_marginTop="@dimen/image_padding"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="@string/no_sign"
                android:textColor="@color/white"
                android:textSize="@dimen/text_normal" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/icon_next_w" />

    </LinearLayout>


</RelativeLayout>
