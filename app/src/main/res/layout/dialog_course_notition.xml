<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:background="@drawable/bg_dialog_selector_white"
    android:orientation="vertical"
    android:scrollbars="none">

    <TextView
        android:id="@+id/tv_tittle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:gravity="center"
        android:padding="@dimen/activity_horizontal_margin"
        android:text="SAMARTFIT"
        android:textColor="@color/text_color_black"
        android:textSize="@dimen/text_larger" />


    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:lineSpacingExtra="10dp"
        android:text="新增版本"
        android:textColor="@color/text_color_black"
        android:textSize="@dimen/text_normal_down" />

    <CheckBox
        android:id="@+id/ck_remeber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/header_bar_height"
        android:button="@drawable/login_remeber_checked"
        android:checked="false"
        android:gravity="center_vertical"
        android:text="我已知晓约课协议，以后不再显示"
        android:textColor="@color/text_color_black"
        android:textSize="@dimen/text_normal_down" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/image_padding"
        android:background="@color/text_color_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cancel_action"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/activity_horizontal_margin"
            android:text="取消"
            android:textColor="@color/text_color_gray"
            android:textSize="@dimen/text_normal" />

        <TextView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/text_color_gray" />

        <TextView
            android:id="@+id/commit_action"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1px"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/activity_horizontal_margin"
            android:text="同意协议，马上预约"
            android:textColor="@color/common_header_bg"
            android:textSize="@dimen/text_normal" />
    </LinearLayout>

</LinearLayout>