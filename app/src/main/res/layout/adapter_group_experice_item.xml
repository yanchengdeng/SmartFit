<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/activity_horizontal_margin">

  <RelativeLayout
      android:id="@+id/rl_icon_ui"
      android:layout_centerVertical="true"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">

      <com.smartfit.views.SelectableRoundedImageView
          android:id="@+id/iv_icon"
          android:scaleType="centerCrop"
          android:layout_width="@dimen/icon_normal_size"
          android:layout_marginTop="2dp"
          android:src="@mipmap/bg_pic"
          app:sriv_left_top_corner_radius="4dip"
          app:sriv_right_top_corner_radius="4dip"
          app:sriv_left_bottom_corner_radius="4dip"
          app:sriv_right_bottom_corner_radius="4dip"
          app:sriv_oval="false"
          android:layout_height="@dimen/icon_normal_size" />

      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:visibility="invisible"
          android:src="@mipmap/icon_office"/>
  </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ll_context_ui"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/rl_icon_ui"
        android:layout_toLeftOf="@+id/ll_price_ui"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_tittle"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:layout_marginLeft="@dimen/image_padding_big"
            android:layout_marginTop="@dimen/image_padding_big"
            android:textColor="@color/black"
            android:textSize="@dimen/text_normal"
            android:text=""
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_below="@+id/tv_tittle"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/image_padding_big"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_couch"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:textColor="@color/text_color_gray"
                    android:textSize="@dimen/text_normal_down"
                    android:text="教练"
                    android:layout_marginRight="@dimen/image_padding"
                    android:layout_height="wrap_content" />

                <RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/image_padding"
                    style="@style/roomRatingBar"
                    android:isIndicator="true"
                    android:focusable="false"
                    android:clickable="false"
                    android:focusableInTouchMode="false"
                    android:numStars="5"
                    android:rating="4"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/image_padding"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_join"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:textColor="@color/text_color_gray"
                    android:textSize="@dimen/text_normal_down"
                    android:text="0/0人"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_marginLeft="@dimen/image_padding_big"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:textColor="@color/text_color_gray"
                    android:textSize="@dimen/text_normal_down"
                    android:text=""
                    android:layout_height="wrap_content" />

            </LinearLayout>


        </LinearLayout>




    </RelativeLayout>


    <LinearLayout
        android:id="@+id/ll_price_ui"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:textColor="@color/common_header_bg"
            android:textSize="@dimen/text_normal_down"
            android:text="0元"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_price_info"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:textColor="@color/common_header_bg"
            android:textSize="@dimen/text_normal_down"
            android:text="会员免费"
            android:layout_height="wrap_content" />
    </LinearLayout>


</RelativeLayout>
