<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/main_bar_bg"
        android:layout_height="@dimen/header_bar_height">

        <TextView
            android:id="@+id/tv_city_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="福州"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:drawableRight="@mipmap/icon_down"
            android:layout_centerVertical="true"
            android:drawablePadding="@dimen/image_padding"
            android:textColor="@color/white"
            android:textSize="@dimen/text_normal"/>
        
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_city_name"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/image_padding"
            android:layout_marginBottom="@dimen/image_padding"
            android:orientation="horizontal"
            android:background="@mipmap/bg_search_s">
            <ImageView
                android:id="@+id/iv_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/image_padding"
                android:src="@mipmap/icon_search_b"/>


            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/input_address"
                android:textSize="@dimen/text_normal"
                android:background="@null"
                android:layout_marginLeft="@dimen/image_padding"
                android:textColor="@color/text_color_gray"/>

        </LinearLayout>

    </RelativeLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/bg_class"
        android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <android.support.v7.widget.CardView
            android:id="@+id/card_small_class"
            style="@style/CardViewStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="8dp"
            android:layout_weight="2"
            app:cardBackgroundColor="@color/little_class">

            <ImageView
                android:layout_width="@dimen/main_card_width"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/icon_primary"></ImageView>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            style="@style/CardViewStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="8dp"
            android:layout_weight="3"
            app:cardBackgroundColor="@color/transparent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@mipmap/bg_pic"></ImageView>


        </android.support.v7.widget.CardView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <android.support.v7.widget.CardView
            android:id="@+id/card_find_private_coach"
            style="@style/CardViewStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:layout_weight="3"
            app:cardBackgroundColor="@color/little_class">

            <ImageView
                android:layout_width="@dimen/main_card_width"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_find"></ImageView>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_group_exersise"
            style="@style/CardViewStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:layout_weight="2"
            app:cardBackgroundColor="@color/find_private_coach">

            <ImageView
                android:layout_width="@dimen/main_card_width"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/icon_team"></ImageView>


        </android.support.v7.widget.CardView>

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/card_banner"
        style="@style/CardViewStyle"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="@color/banner">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:textSize="@dimen/text_larger"
            android:text="banner"></TextView>


    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <android.support.v7.widget.CardView
            android:id="@+id/card_aerobic_appratus"
            style="@style/CardViewStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="8dp"
            android:layout_weight="2"
            app:cardBackgroundColor="@color/aerobic_apparatuc">

            <ImageView
                android:layout_width="@dimen/main_card_width"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/icon_aerobic"></ImageView>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_smart_fit"
            style="@style/CardViewStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_weight="3"
            app:cardBackgroundColor="@color/order_class_myself">

            <ImageView
                android:layout_width="@dimen/main_card_width"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:src="@mipmap/icon_smar"></ImageView>


        </android.support.v7.widget.CardView>

    </LinearLayout>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:textSize="@dimen/text_larger"
                android:text=""></TextView>


    </LinearLayout>

        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="MergeRootFrame" />

    </FrameLayout>
</LinearLayout>
