<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/activity_horizontal_margin">


        <com.smartfit.views.SelectableRoundedImageView
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/icon_normal_size"
            android:layout_height="@dimen/icon_normal_size"
            android:layout_marginTop="2dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/bg_pic"
            app:sriv_left_bottom_corner_radius="4dip"
            app:sriv_left_top_corner_radius="4dip"
            app:sriv_oval="false"
            app:sriv_right_bottom_corner_radius="4dip"
            app:sriv_right_top_corner_radius="4dip" />


    <LinearLayout
        android:id="@+id/ll_context_ui"
        android:layout_toRightOf="@+id/iv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/image_padding_big"
        android:layout_marginRight="@dimen/image_padding_big"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/image_padding"
            android:singleLine="true"
            android:text="暂无昵称"
            android:textColor="@color/black"
            android:textSize="@dimen/text_normal"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/image_padding_big"
            android:singleLine="true"
            android:text="暂无手机号"
            android:textColor="@color/text_color_gray"
            android:textSize="@dimen/text_normal" />


    </LinearLayout>


    <Button
        android:id="@+id/btn_dialet"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/bg_dialog_selector_red"
        android:textColor="@color/white"
        android:textSize="@dimen/text_normal"
        android:gravity="center"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="@string/dialet_call"/>

</RelativeLayout>
