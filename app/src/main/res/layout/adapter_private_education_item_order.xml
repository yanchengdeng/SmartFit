<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/image_padding">

    <RelativeLayout
        android:id="@+id/rl_icon_ui"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <com.smartfit.views.SelectableRoundedImageView
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/icon_normal_size"
            android:layout_height="@dimen/icon_normal_size"
            android:layout_marginTop="2dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/bg_pic"
            app:sriv_left_bottom_corner_radius="4dip"
            app:sriv_left_top_corner_radius="4dip"
            app:sriv_oval="false"
            app:sriv_right_bottom_corner_radius="4dip"
            app:sriv_right_top_corner_radius="4dip" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_office"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_context_ui"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/image_padding_big"
        android:layout_marginRight="@dimen/image_padding_big"
        android:layout_toLeftOf="@+id/ch_select"
        android:layout_toRightOf="@+id/rl_icon_ui"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_coach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/image_padding"
            android:drawableRight="@mipmap/icon_woman"
            android:singleLine="true"
            android:text="教练  "
            android:textColor="@color/black"
            android:textSize="@dimen/text_normal_down"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="有空"
            android:textColor="@color/text_color_gray"
            android:textSize="@dimen/text_normal_down"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RatingBar
                android:id="@+id/ratingBar"
                style="@style/roomRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="true"
                android:numStars="5"
                android:rating="0" />


            <TextView
                android:id="@+id/tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/image_padding"
                android:singleLine="true"
                android:text="0"
                android:textColor="@color/text_color_gray"
                android:textSize="@dimen/text_normal_down" />

        </LinearLayout>


    </LinearLayout>


    <CheckBox
        android:id="@+id/ch_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:button="@null"
        android:clickable="false"
        android:drawablePadding="@dimen/image_padding"
        android:focusable="false"
        android:gravity="center"
        android:text="0元/小时"
        android:textColor="@color/common_header_bg"
        android:textSize="@dimen/text_normal_down" />


</RelativeLayout>
