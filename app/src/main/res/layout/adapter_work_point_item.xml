<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/activity_horizontal_margin">

    <TextView
        android:id="@+id/tv_work_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="我的工作1"
        android:textColor="@color/text_color_gray"
        android:textSize="@dimen/text_normal"
        android:textStyle="bold" />


    <RelativeLayout
        android:id="@+id/ll_context_ui"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_work_name"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_work_time_tittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="工作时间"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/text_normal"
            />

        <TextView
            android:id="@+id/tv_work_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_work_time_tittle"
            android:singleLine="true"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:text="@string/click_setting"
            android:layout_marginLeft="@dimen/image_padding_big"
            android:textColor="@color/text_color_gray"
            android:textSize="@dimen/text_normal"
            />


        <TextView
            android:id="@+id/tv_work_point_tittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_below="@+id/tv_work_time_tittle"
            android:singleLine="true"
            android:text="工作地点"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/text_normal" />

        <TextView
            android:id="@+id/tv_work_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_work_time_tittle"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_toRightOf="@+id/tv_work_point_tittle"
            android:singleLine="true"
            android:text="@string/click_setting"
            android:layout_marginLeft="@dimen/image_padding_big"
            android:textColor="@color/text_color_gray"
            android:textSize="@dimen/text_normal" />


    </RelativeLayout>



    <ImageView
        android:id="@+id/iv_delet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@mipmap/icon_delect"/>


</RelativeLayout>
