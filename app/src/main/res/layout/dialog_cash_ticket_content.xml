<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/header_bar_height"
    android:layout_marginRight="@dimen/header_bar_height"
    android:background="@drawable/bg_dialog_selector_white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:scrollbars="none">

    <TextView
        android:id="@+id/tv_tittle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/activity_horizontal_margin"
        android:text="预约成功"
        android:textColor="@color/text_color_black"
        android:textSize="@dimen/text_normal" />


    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/wx_red_package"
        android:drawablePadding="@dimen/image_padding"
        android:gravity="left|center_vertical"
        android:lineSpacingExtra="5dp"
        android:padding="@dimen/activity_horizontal_margin"
        android:text="恭喜获得一个现金大礼包，分享好友后可立即领取"
        android:textColor="@color/text_color_black"
        android:textSize="@dimen/text_normal" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/image_padding"
        android:background="@color/line_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cancel_action"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/activity_horizontal_margin"
            android:text="取消"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/text_normal" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/text_color_gray" />


        <TextView
            android:id="@+id/commit_action"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1px"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/activity_horizontal_margin"
            android:text="马上分享"
            android:textColor="@color/common_header_bg"
            android:textSize="@dimen/text_normal" />
    </LinearLayout>


</LinearLayout>