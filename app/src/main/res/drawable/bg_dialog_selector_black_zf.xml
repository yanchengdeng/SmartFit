        <shape>
            <corners android:radius="0dip"/>
            <solid android:color="@android:color/transparent"/>
            <stroke android:color="@color/text_color_black" android:width="1px"/>
        </shape>
    </item>
    
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="0dip"/>
            <solid android:color="@android:color/transparent"/>
            <stroke android:color="@color/text_color_black" android:width="1px"/>
        </shape>
    </item>   
</selector>


